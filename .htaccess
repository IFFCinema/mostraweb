RewriteEngine on
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?cinemanocampus.com [NC]
RewriteRule \.(jpg|jpeg|png|gif)$ - [NC,F,L]

ErrorDocument 400 ./error/index.php
ErrorDocument 401 ./error/index.php
ErrorDocument 403 ./error/index.php
ErrorDocument 404 ./error/index.php
ErrorDocument 500 ./error/index.php

RewriteRule .*\.(jpg|jpeg|png|gif)$ /alerta/alert.jpg [L]

<files ~ "^.*\.([Hh][Tt][Aa])">
order allow,deny
deny from all
satisfy all
</files>
